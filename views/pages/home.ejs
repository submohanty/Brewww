<%- include('../partials/header'); -%>
<body>
  <main>

<!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Brewww</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="reviewpage">Reviews <span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </div>
    </nav>
	

    <div class="" style="background-color: #24242c;">
      <div class="container-fluid" style="padding: 2%; ">
        <form class="" action="/" method="post">
          <div class="row">
            <div class="col-5">
              <input class="form-control" type="text" name="title" placeholder="Enter name of city of brewery">
            </div>
            <div class="col-1">
              <input class="btn btn-light" type="submit" name="Submit" value = "Submit" href=""/>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="container-lg" style="margin-top: 2%;">
      <% if (error) { %>
        <div class="alert alert-danger"><%- message %></div>
      <% } %>
      <%- include('../partials/reviews', {items: items}); %>
    </div>

  </main>
<%- include('../partials/footer'); -%>
